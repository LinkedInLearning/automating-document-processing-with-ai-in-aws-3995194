{
  "Comment": "Document processing workflow",
  "StartAt": "TextractProcessing",
  "States": {
    "TextractProcessing": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "arn:aws:lambda:us-east-1:041704031581:function:idp-textract-processor:$LATEST",
        "Payload": {
          "bucket.$": "$.detail.bucket.name",
          "key.$": "$.detail.object.key"
        }
      },
      "Next": "ComprehendAnalysis",
      "ResultPath": "$"
    },
    "ComprehendAnalysis": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "arn:aws:lambda:us-east-1:041704031581:function:idp-comprehend-processor:$LATEST",
        "Payload.$": "$.Payload"
      },
      "Next": "SaveToDynamoDB",
      "ResultPath": "$.comprehendResult"
    },
    "SaveToDynamoDB": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "arn:aws:lambda:us-east-1:041704031581:function:idp-dynamodb-processor:$LATEST",
        "Payload": {
          "body": {
            "textractResult.$": "$.Payload",
            "comprehendResult.$": "$.comprehendResult.Payload"
          }
        }
      },
      "End": true
    }
  }
}
